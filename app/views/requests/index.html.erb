<div ng-controller='PaymentsListController'>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" ng-init="isCollapsed = true" ng-click="isCollapsed = !isCollapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= glyph_link_to('-circle-arrow-left', root_path, class: 'navbar-brand') {'Назад'} %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="navbar-collapse" ng-class="{collapse: isCollapsed}">
        <ul class="nav navbar-nav">
          <li ng-class="{active : isActive(1)}"><a ng-click="clickMenu(1)" href="#">Все</a></li>
          <li ng-class="{active : isActive(2)}"><a ng-click="clickMenu(2)" href="#">Подписанные мной</a></li>
          <li ng-class="{active : isActive(3)}"><a ng-click="clickMenu(3)" href="#">Не подписанные мной</a></li>
          <li ng-class="{active : isActive(4)}"><a ng-click="clickMenu(4)" href="#">Утвержденные</a></li>
          <li ng-class="{active : isActive(5)}"><a ng-click="clickMenu(5)" href="#">Не утвержденные</a></li>
        </ul>

        <%= render 'home/user_zone' %>

      </div><!-- /.navbar-collapse -->

    </div><!-- /.container-fluid -->
  </nav>

  <section>
    <div class="row">    
      <h5 class='col-sm-offset-2 col-sm-8 text-center page-header'> Заявки на платежи</h5>
    </div>
    <div class='row'>
      <div class='col-sm-offset-0 col-sm-12'>
        <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-big">
          <thead class="thead-inverse">
            <tr class="info">
              <th st-sort="date" >Номер</th>
              <th st-sort="date" >На дату</th>
              <th st-sort="project_name">Проект</th>
              <th st-sort="sum">Сумма</th>
              <th st-sort="is_approved">Утверждена</th>
              <th st-sort="created_at">Создан</th>
              <th st-sort="updated_at">Изменен</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <tr class="request_row" ng-repeat-start="row in displayedCollection" >
              <td>{{row.id}}</td>
              <td>{{row.date}}</td>
              <td>{{row.project_name}}</td>
              <td>{{row.sum}}</td>
              <td>{{row.is_approved|rusBoolean}}</td>
              <td>{{row.created_at}}</td>
              <td>{{row.updated_at}}</td>
              <td>  
                <button 
                  ng-disabled="!row.b_payments.length>0" 
                  type="button" 
                  ng-click="row.is_visible = !row.is_visible" 
                  class="btn btn-sm btn-warning"
                >
                  <i class="glyphicon" ng-class=" {'glyphicon glyphicon-indent-left' : !row.is_visible, 'glyphicon glyphicon-triangle-left' : row.is_visible }">
                  </i>
                </button>
              </td>
              
            </tr>
            <tr ng-repeat-end class="my-b_payments" >
              <td class="b_payments_section animate-show" colspan="8" ng-show="row.b_payments.length>0 && row.is_visible==true" >
<!-- todo: insert image of right arrow, move styles into css, visualize a_payments here-->
                <table class="table table-sm" style="width: 95%">
                  <thead>
                    <tr class="my-b_payments">
                      <th>№</th>
                      <th colspan="2">платежи по статьям:</th>
                      <th>Утв. лимит</th>
                      <th>Остаток</th>
                      <th>Необх. Сумма</th>
                      <th>Получатель</th>
                      <th>Назначение</th>
                      <th>Примечание</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="my-b_payments" ng-repeat="b_payment in row.b_payments">
                      <td class="td1">{{b_payment.id}}</td>                   
                      <td class="td2">{{b_payment.b_acc_number}}</td>                   
                      <td class="td3">{{b_payment.b_acc_name}}</td>                   
                      <td class="td4">{{b_payment.sum_allowed}}</td>
                      <td class="td5">{{b_payment.sum_rest}}</td>
                      <td class="td6">{{b_payment.sum}}</td>
                      <td class="td7">{{b_payment.recipient}}</td>
                      <td class="td8">{{b_payment.detail}}</td>
                      <td class="td9">{{b_payment.note}}</td>

                      <td></td>
                    </tr>
                  </tbody>
                </table>
                <div style="width: 3%; float: left; display: inline-block;"><%= glyph_link_to('-arrow-right','') {''} %></div>

              </td>
            </tr>


          </tbody>

        </table>
      </div>
    </div>

    
  </section>

</div>
