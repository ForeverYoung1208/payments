<p id="notice"><%= notice %></p>

<h1>Listing B Accounts</h1>

<table class="plain_table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Plan</th>
      <th>Fact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @b_accounts.each do |b_account| %>
      <tr>
        <td><%= b_account.number %></td>
        <td><%= b_account.name %></td>
        <td><%= b_account.plan %></td>
        <td><%= b_account.fact %></td>
        <td><%= link_to 'Show', b_account %></td>
        <td><%= link_to 'Edit', edit_b_account_path(b_account) %></td>
        <td><%= link_to 'Destroy', b_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

