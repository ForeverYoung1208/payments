<p id="notice"><%= notice %></p>

<h1>Listing Resourcers</h1>

<table class="plain_table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resourcers.each do |resourcer| %>
      <tr>
        <td><%= resourcer.name %></td>
        <td><%= link_to 'Show', resourcer %></td>
        <td><%= link_to 'Edit', edit_resourcer_path(resourcer) %></td>
        <td><%= link_to 'Destroy', resourcer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

